include ./mixins/navbar

doctype html
html
  head
    title= $strings.site.title
    block styles
      link(rel='stylesheet' href='/public/css/main.css')
      //link(rel="stylesheet" href="/public/css/bootstrap.min.css")
      link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
  body.b
    block nav#navbar
      //div.container(id='nav')
        +nav($strings.site.title, 'main_menu')
          +nav_item( '/' ) Home
          +nav_item( '/client/list' ) Products
          +nav_item( '/location/list' ) Locations
          +nav_item( '/location-type/list' ) Location Types

    div.container
      if $messages
        each notices, type in $messages
          each notice in notices
            p(class="alert alert-" + type) #{notice}

      if errors
        each error in errors
          p(class="alert alert-danger") #{error.msg}

      block content

    block scripts
      script(src="/public/js/jquery-3.3.1.slim.min.js")
      script(src="/public/js/bootstrap.min.js")
      script(src='/public/js/main.js')

