extends ../../layout

block content
  div(class='col-md-6')
    form(id='client-delete-form' name='client-delete-form' class='form-horizontal' method="POST" action='')
      input(id='id' type="hidden" name='id' value=client.id class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          strong #{client.name} #{client.code}?
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Delete