extends ../../layout

block content
  div(class='col-md-6')
    form(id='client-edit-form' name='client-edit-form' class='form-horizontal' method="POST" action='')
      input(id='id' name='id' value=$fn.getPropOrDefault(newclient, 'id', client.id) type='hidden')
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') Name
        div(class='col-md-9')
          input(id='name' name='name' value=$fn.getPropOrDefault(newclient, 'name', client.name) class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='code') Code
        div(class='col-md-9')
          input(id='code' name='code' value=$fn.getPropOrDefault(newclient, 'code', client.code) class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-info') Update